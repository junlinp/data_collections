FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements_llm.txt .
RUN pip install --no-cache-dir -r requirements_llm.txt

# Create data directory
RUN mkdir -p /app/data

# Copy application files
COPY llm_processor.py .
COPY memory_utils.py .
COPY mongo_utils.py .

# Expose port
EXPOSE 5003

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:5003/api/health', timeout=5)" || exit 1

# Run the application
CMD ["python", "llm_processor.py"] 