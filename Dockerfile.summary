FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements_ui.txt .
RUN pip install --no-cache-dir -r requirements_ui.txt

# Create data directory
RUN mkdir -p /app/data

# Copy application files
COPY summary_display_server.py .

# Expose port
EXPOSE 5004

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:5004/api/health', timeout=5)" || exit 1

# Run the application
CMD ["python", "summary_display_server.py"] 